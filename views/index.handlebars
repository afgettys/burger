<h1>Eat-Da-Burger!</h1>

<img src= "burger.jpg">

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="insertBurger">Kill your cravings</label>
    <input type="text" id="burger" name="burger_name">
    <button type="submit">Add a delicious Burger!</button>
  </div> 
</form>

<div class="to_eat">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <button class="Click to eat" data-id="{{id}}" type="button">
            {{ burger_name }} </button>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class ="devoured">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{>burger_name}}
    {{/if}}
  {{/each}}
</ul>
</div>


